<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41465A"
    tools:context=".Register">

    <TextView
        android:id="@+id/regtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:textSize="36dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/regtext"
        android:background="@drawable/regbg"

        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="28dp"
        android:scrollbars="vertical"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:layout_marginTop="32dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/path"
            android:layout_gravity="center"/>



        <EditText
            android:id="@+id/regemail_in"
            android:layout_marginTop="32dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:focusedByDefault="false"
            android:layout_gravity="center"
            android:background="@drawable/reg_text"
            android:hint="Email- id"
            android:textSize="20dp"
            android:padding="2dp" />

        <EditText
            android:id="@+id/reguname_in"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:focusedByDefault="false"
            android:textSize="20dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/reg_text"
            android:hint="Username"
            android:padding="2dp" />

        <EditText
            android:id="@+id/regpass_in"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:focusedByDefault="false"
            android:layout_marginTop="32dp"
            android:background="@drawable/reg_text"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:padding="2dp" />
        <EditText
            android:id="@+id/regcpass_in"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:focusedByDefault="false"
            android:background="@drawable/reg_text"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:padding="2dp" />

        <Button
            android:id="@+id/regbutton"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rectangular_bg"
            android:text="Register"
            android:textColor="#fff" />

    </LinearLayout>
    </ScrollView>


</RelativeLayout>